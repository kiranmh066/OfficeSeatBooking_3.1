
@{
    ViewData["Title"] = "GetAllHelps";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<Office_Seat_Book_Entity.Help>
<div class="mask bg-gradient-primary">
    <img class="img"
         src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved1.jpg"
         alt="img">
    <div class="card shadow mb-1">
    <div class="card-header py-3">
      <center> <a  style="color:#003399;font-size:x-large" align="center"> get employee <span class="font-weight-bold" style="font-size:x-large">queries</span></a>
            </center>
        </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="myTable" width="75px" cellspacing="0">
                <thead>
                    <tr>
                        <th>Emp Id</th>
                        <th>Employee Name</th>
                        <th>Employee Email</th>
                        <th> Description</th>
                        <th> Type of Query</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var help in Model)
                    {
                        <tr>
                            <td>@help.Employee.EmpID</td>
                            <td>@help.Employee.Name</td>
                            <td>@help.Employee.Email</td>
                             <td>@help.Description</td>
                            <td>@help.TypeOfQuery</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>