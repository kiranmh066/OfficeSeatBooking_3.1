@model Office_Seat_Book_Entity.SecretKey;
@{
    Layout = "~/Views/Shared/_ReceptionistLayout.cshtml";
}

<body>
    <form method="post" enctype="multipart/form-data">
    <div class="mask bg-gradient-primary">
        <img class="img" src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved1.jpg"
             alt="img">
        <div class="container d-flex flex-column">
            <div class="row align-items-center justify-content-center min-vh-100">
                <div class="col-12 col-md-8 col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="mb-4">
                                <h1>Verification</h1>
                            </div>

                                <div class="form-group">
                                    <label for="text" class="form-label"></label>
                                    <input type ="text" asp-controller="Receptionist" asp-action="ShowSecretKey" asp-for="EmpID" class="form-control" placeholder="Enter emp ID" style="width:200px;margin:auto;display:block" required />
                                </div>

                                <div class="form-group" style="margin:auto">
                                    <input type="submit" value="submit" style="width:200px;margin:auto;margin-top:20px;display:block" class="btn btn-primary" />

                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
        @*<script src="~/js/verempid.js"></script>*@
</body>