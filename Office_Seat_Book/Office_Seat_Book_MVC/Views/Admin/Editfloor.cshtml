@model Office_Seat_Book_Entity.Floor
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<body style="background-color:#5A3B5D;color:white;padding-bottom:100px">
    <div class="container">

        <form method="post" enctype="multipart/form-data">
            <center>
                <h3>Edit Floor </h3>
            </center>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">

                        <label>floorid</label>
                        <input type="text" asp-for="FloorID" class="form-control" placeholder="enter seat number" required />
                    </div>
                    <div class="form-group">
                        <label>FloorName</label>
                        <input type="text" asp-for="FloorName" class="form-control" placeholder="Enter Floor number" required />
                    </div>
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-outline-success" />
            &nbsp;&nbsp;
            <a asp-controller="Admin" asp-action="Getallfloor">Cancel</a>
            <hr />
            @if (ViewBag.status == "Ok")
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </form>
    </div>
</body>