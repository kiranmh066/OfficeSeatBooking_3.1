<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins',sans-serif;
    }

    body {
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
    }

    .contain {
        max-width: 500px;
        width: 100%;
        background-color: #fff;
        padding: 25px 30px;
        border-radius: 5px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        position: relative;
        justify-content: center;
        align-items: center;
        display: grid;
        margin: auto;
    }

        .contain .title {
            font-size: 25px;
            font-weight: 500;
            position: relative;
        }

            .contain .title::before {
                content: "";
                position: absolute;
                left: 0;
                bottom: 0;
                height: 3px;
                width: 30px;
                border-radius: 5px;
                background-image: linear-gradient(310deg,#7928ca,#ff0080);
            }

    input {
        background-color: #eee;
        border: none;
        padding: 12px 15px;
        width: 300px !important;
        margin: 3px;
    }

        input:active {
            border: 2px solid black;
        }

    .content form .user-details {
        margin: 20px 0 12px 0;
    }

    button {
        width: 100%;
        border-radius: 5px;
        border: transparent;
        color: #eee;
        height: 30px;
        cursor: pointer;
        background-image: linear-gradient(310deg,#7928ca,#ff0080);
    }

    .user-details .input-box input {
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }

    .alert .success {
        width: 200px;
    }
</style>

