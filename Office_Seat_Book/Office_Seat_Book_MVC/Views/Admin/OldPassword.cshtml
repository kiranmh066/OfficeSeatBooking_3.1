@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Office_Seat_Book_Entity.Employee

<div class="mask bg-gradient-primary">

    <img class="img"
         src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved1.jpg"
         alt="img">
    <div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
        <div class="card p-4" style="background-color:lavender; box-shadow: 12px 12px 2px 1px rgba(0, 0, 255, .1)">
            <div class=" image d-flex flex-column justify-content-center align-items-center">
                <div class="gap-3 mt-3 icons d-flex flex-row justify-content-center align-items-center">
            <form method="post" >
                <div class="col-4 d-inline-block align-top" style=" margin-right:50px;margin-left:270px">
                    <div class="form-group">
                        <label style="color:#003399;font-size:20px">old password</label>
                        <input  type="text" asp-for="Password"  class=" form-control" placeholder="Enter old password" required />
                    </div>
                    <input type="submit" class="btn btn-outline-success" />
                </div>
            </form>
            @if (ViewBag.status == "Ok")
            {
                <br />
                <br />
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <br />
                <br />
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </div>
    </div>
</div>
</div>
</div>