        <div class="container" d-flex flex-column">

            <form method="post" enctype="multipart/form-data">
                <div class="col-4 d-inline-block align-top" style=" margin-right:90px;margin-left:370px; position:relative;">
                    <center><h2 style="color:white">Add Floor </h2></center>
                    <div class="row">
                        <div>
                            @* <div class="form-group">

                            <label>FloorID</label>
                            <input type="text" asp-for="FloorID" class="form-control" placeholder="Enter seat number" required />
                            </div>*@

                            <div class="form-group">
                                <label style="font-size:20px;color:white">Floor Name</label>

                                <input type="text" asp-for="FloorName" class="form-control" placeholder="Enter Floor Name" required />
                            </div>
                        </div>
                    </div>


                    <input type="submit" value="Save" class="btn btn-success my-y" />
                    &nbsp;&nbsp;
                    <input type="reset" value="Reset" class="btn btn-success my-4" />

                    @*submit sends form to server thats why we use submit not button type  *@
                    @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Foodcontroller *@
                    @if (ViewBag.status == "Ok")
                    {
                        <div class="alert alert-success">
                            @ViewBag.message
                        </div>
                    }
                    else if (ViewBag.status == "Error")
                    {
                        <div class="alert alert-danger">
                            @ViewBag.message
                        </div>
                    }
                </div>
            </form>
        </div>
