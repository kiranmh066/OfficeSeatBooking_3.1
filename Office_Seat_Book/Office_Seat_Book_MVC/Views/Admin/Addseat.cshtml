@model Office_Seat_Book_Entity.Seat
@{
    Layout = "~/Views/Shared/_Layout.cshtml";



}



<body style="background-color:#5A3B5D;color:white;padding-bottom:100px">
    <div class="container">



        <form method="post" enctype="multipart/form-data">
            <center>
                <h3>Add Seat </h3>
            </center>
            <div class="row">
                <div class="col-md-6">
                    @*<div class="form-group">

                    <label>Seatno</label>
                    <input type="text" asp-for="Seat_No" class="form-control" placeholder="Enter seat number" required />
                    </div>*@
                    <div class="form-group">
                        <label>FloorId</label>
                        <input type="text" asp-for="FloorID" class="form-control" placeholder="Enter Floor number" required />
                    </div>
                </div>
            </div>
            <input type="submit" value="Save" class="btn btn-outline-success" />
            &nbsp;&nbsp;
            <input type="reset" value="Reset" class="btn btn-outline-secondary" />
            <hr />
            @*submit sends form to server thats why we use submit not button type  *@
            @*   by default get request is called so we have mention post in the initial stage of form which will call httppost in Foodcontroller *@
            @if (ViewBag.status == "Ok")
            {
                <div class="alert alert-success">
                    @ViewBag.message
                </div>
            }
            else if (ViewBag.status == "Error")
            {
                <div class="alert alert-danger">
                    @ViewBag.message
                </div>
            }
        </form>
    </div>
</body>