@{
    Layout = "~/Views/Shared/_DemoLayout.cshtml";
}

@{
    ViewData["Title"] = "BookSeat";
}

@model Office_Seat_Book_Entity.Booking
<link href="~/css/bookings.css" rel="stylesheet" />
<head>
   
    
</head>
<body>
    <div class="image img-fluid">
        <img src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved6.jpg"
             alt="image">
    </div>
    <div class="container">
        <nav class="navbar navbar-expand-lg blur blur-rounded shadow my-4">
            <div class="container-fluid">

                <svg data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions"
                     aria-controls="offcanvasWithBothOptions" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                     class="bi" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                    </path>
                </svg>

                <div class=" col-lg-1 mx-auto order-0">

                    <a class="navbar-brand text-white mx-md-5">
                        BOOK.it
                    </a>
                </div>

                <div class="nav col-lg-2">
                    <div>
                        <button class="viewpass text-white btn-md bg-success px-2">
                            View Pass
                        </button>
                    </div>
                    <div class="bell">

                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                             class="bi bi-bell text-white" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                        </svg>
                    </div>
                    <div class="logout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                             class="bi bi-box-arrow-right text-white" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd"
                                  d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                    </div>
                </div>
            </div>
        </nav>
        <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions"
             aria-labelledby="offcanvasWithBothOptionsLabel">
            <div class="offcanvas-header">
                <h3 class="offcanvas-title text-center" id="offcanvasWithBothOptionsLabel">Menu</h3>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Home</a>
                    </div>
                </section>
                <br>
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Profile</a>
                    </div>
                </section>
                <br>
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Your Bookings</a>
                    </div>
                </section>
                <br>
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a class="" asp-area="" asp-controller="Help" asp-action="Index">Help</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="container col-12">
        <div class="col-6 col-lg-3 col-md-4 col-sm-4 mx-4">
            <label for="location">Location</label>
            <select type="location" name="location" class="form-control" required>
                <option value=""></option>
                <option value="">Bengaluru</option>
                <option value="">Gurgaon</option>
            </select>
        </div>

        <div class="col-6 col-lg-3 col-md-4 col-sm-4 mx-4 my-4">
            <label for="branch">Branch</label>
            <select type="branch" name="branch" class="form-control" required>
                <option value=""></option>
                <option value="">JP Nagar</option>
                <option value="">East End</option>
            </select>
        </div>

        <div class="col-6 col-lg-3 col-md-4 col-sm-4 mx-4 my-4">
            <label for="branch">Type of Request</label>
            <select type="branch" name="branch" class="form-control" required>
                <option value=""></option>
                <option value="">Daily</option>
                <option value="">Weekly</option>
                <option value="">Customise</option>
            </select>
        </div>
        <div class="date col mx-4 my-2">
            <div>
                From
                <input type="date" id="fromDate">
            </div> <br>
            <div>
                To  &nbsp; &nbsp;
                <input type="date" id="toDate">
            </div>
        </div>
        <div class="col-6 col-lg-3 col-md-4 col-sm-4 mx-4 my-4">
            <label for="shift-time">Select Shift TIme</label>
            <select type="shift-time" name="shift-time" class="form-control" required>
                <option value=""></option>
                <option value="">09:00 AM - 06:00 PM</option>
                <option value="">06:00 AM - 02:00 PM</option>
                <option value="">02:00 PM - 10:00 PM</option>
                <option value="">10:00 AM - 06:00 PM</option>
            </select>
        </div>
        <button class="btn btn-primary mx-4">
            Next &nbsp; >
        </button>
    </div>
</body>
<script>
    const today = new Date().toISOString().split('T')[0];
    const dateFrom = document.getElementById("fromDate");
    dateFrom.setAttribute("min", today);

    const thisday = new Date().toISOString().split('T')[0];
    const dateTo = document.getElementById("toDate");
    dateTo.setAttribute("min", thisday);
</script>