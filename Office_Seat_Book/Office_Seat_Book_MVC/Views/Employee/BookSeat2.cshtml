@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
@{
    ViewData["Title"] = "BookSeat";
}

@model Office_Seat_Book_Entity.Booking

<body>
    <div class="mask bg-gradient-primary">
        <img class="img"
             src="https://demos.creative-tim.com/marketplace/soft-ui-design-system-pro/assets/img/curved-images/curved1.jpg"
             alt="img">
    </div>
    <div class="container">
        <nav class="navbar navbar-expand-lg blur blur-rounded shadow my-4">
            <div class="container-fluid">
                <svg data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions"
                     aria-controls="offcanvasWithBothOptions" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                     class="bi" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M2.5 11.5A.5.5 0 0 1 3 11h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4A.5.5 0 0 1 3 3h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                    </path>
                </svg>
                <div class=" col-lg-1 mx-auto order-0">
                    <a class="navbar-brand mx-md-5" style="color: rgb(0, 0, 0);">
                        BOOK.it
                    </a>
                </div>

                <div class="nav col-lg-2">
                    <div>
                        <button class="viewpass text-white btn-md bg-success px-2">
                            View Pass
                        </button>
                    </div>
                    <div class="bell" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">

                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2zM8 1.918l-.797.161A4.002 4.002 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4.002 4.002 0 0 0-3.203-3.92L8 1.917zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5.002 5.002 0 0 1 13 6c0 .88.32 4.2 1.22 6z" />
                        </svg>
                    </div>
                    <div class="logout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                    </div>
                </div>
            </div>
        </nav>
        <div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions"
             aria-labelledby="offcanvasWithBothOptionsLabel">
            <div class="offcanvas-header">
                <h3 class="offcanvas-title text-center" id="offcanvasWithBothOptionsLabel">Menu</h3>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Home</a>
                    </div>
                </section>
                <br>
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Profile</a>
                    </div>
                </section>
                <br>
                <section class="color-7">
                    <div class="anchor cl-effect-4">
                        <a href="#">Help</a>
                    </div>
                </section>
            </div>
        </div>


        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasRightLabel">Notifications</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <h5>Heading</h5>
                <p>Description</p>
                <hr>
            </div>
        </div>
        
        <div class="contain">
            <div class="title">Book Your Seat</div>
            <div class="content">
                <form method="post">
                    <div class="user-details">

                            <div class="input-box">
                                <select asp-for="Vehicle" class="form-control" asp-items="@ViewBag.yesornorequest" required></select>
                            </div>

                            <div class="input-box">
                                <select asp-for="seat.FloorID" class="form-control" asp-items="@ViewBag.FloorList" required></select>
                            </div>
                      
                        <div class="input-box">
                            <span>From</span>
                                <input asp-for="From_Date" type="date" class="form-control" id="fromDate">
                        </div>
                        <div class="input-box">
                            <span>To</span>
                                <input asp-for="To_Date" type="date" class="form-control" id="toDate">  @*class="form-control"*@
                        </div>

                        <div class="input-box">
                                <select asp-for="Shift_Time" class="form-control" asp-items="@ViewBag.shiftTimings" required></select>
                            
             
                            
                        </div>
                        @*<div class="input-box">
                            <select name="location" class="category" required>
                                <option>Type of Vehicle</option>
                                <option>2 Wheeler</option>
                                <option>4 Wheeler</option>
                            </select>
                        </div>*@


                    </div>
                    <div class="button">
                        <input type="submit" value="Next">
                    </div>
                </form>
            </div>
        </div>
      
    </div>

</body>
<script>
    const today = new Date().toISOString().split('T')[0];
    const dateFrom = document.getElementById("fromDate");
    dateFrom.setAttribute("min", today);

    const thisday = new Date().toISOString().split('T')[0];
    const dateTo = document.getElementById("toDate");
    dateTo.setAttribute("min", thisday);
</script>
<style>
    .img {
        position: absolute;
        background-size: cover;
        background-position: 50%;
        background-repeat: no-repeat;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.4;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins',sans-serif;
    }

    .contain {
        max-width: 700px;
        background-color: #fff;
        padding: 25px 30px;
        border-radius: 5px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        position: relative;
        display: grid;
        justify-content: center;
        align-items: center;
        margin: auto;
    }

        .contain .title {
            font-size: 25px;
            font-weight: 500;
            position: relative;
        }

            .contain .title::before {
                content: "";
                position: absolute;
                bottom: 0%;
                height: 3px;
                width: 175px;
                border-radius: 5px;
                background-image: linear-gradient(310deg,#7928ca,#ff0080);
            }

    span {
        background-color: #ffffff;
        border: none;
        width: 50px;
        align-items: center;
        justify-content: center;
        display: flex;
        margin-top: 35px;
    }

    .date {
        margin-top: 20px;
        width: 250px;
        height: 40px;
        background-color: #eee;
        border: 2px solid white;
    }

    .user-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 20px 0 12px 0;
    }

        .user-details .input-box {
            margin-bottom: 15px;
            display: flex;
        }

    .input-box {
        display: grid;
        justify-content: center;
        align-content: center;
    }

        .input-box:click {
            border: 2px solid black;
        }

    .user-details .input-box {
        height: 45px;
        width: 100%;
        outline: none;
        font-size: 16px;
        border-radius: 5px;
        padding-left: 15px;
        border-bottom-width: 2px;
        transition: all 0.3s ease;
    }

    select {
        height: 45px;
        background-color: rgb(238, 238, 238);
        border: none;
        padding: 5px;
        border-radius: 5px;
    }

    .category {
        display: flex;
        width: 50%;
        margin: 14px 0;
        justify-content: space-between;
    }

    form .button {
        height: 45px;
        margin: 35px 0
    }

        form .button input {
            height: 100%;
            width: 100%;
            border-radius: 5px;
            border: none;
            color: #fff;
            font-size: 18px;
            font-weight: 500;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 1s ease;
            background-image: linear-gradient(310deg,#7928ca,#ff0080);
        }

            form .button input:hover {
                transform: scale(0.99);
                background-image: linear-gradient(310deg,#ff0080, #7928ca);
            }

    media(max-width: 584px) {
        .contain

    {
        max-width: 100%;
    }

    form .user-details .input-box {
        margin-bottom: 15px;
        width: 100%;
    }

    form .category {
        width: 100%;
    }

    .content form .gender-details .user-details {
        height: 100%;
        overflow-y: scroll;
    }

    .user-details::-webkit-scrollbar {
        width: 5px;
    }

    }

    media(max-width: 459px) {
        .contain .content .category

    {
        flex-direction: column;
    }

    }

    media(max-width: 465px) {
        .gender-details

    {
        width: 100%;
    }

    }

    .mask {
        position: absolute;
        background-size: cover;
        top: 0;
        width: 100%;
        height: 70%;
    }

    .bg-gradient-primary {
        background-image: linear-gradient(310deg,#7928ca,#ff0080);
        height: 70%;
        width: 100%;
        opacity: 1;
    }

    .navbar {
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
        background-color: rgba(234, 210, 239, 0.9);
        color: rgb(20, 20, 21);
        opacity: 1;
    }

    .navbar-brand {
        font-weight: bold;
    }

    .nav {
        justify-content: space-between;
    }

    .bell {
        margin: auto;
        cursor: pointer;
    }

    .logout {
        margin: auto;
        cursor: pointer;
    }

    .bi {
        cursor: pointer;
    }

    .viewpass {
        margin: auto;
        transition: transform 80ms ease-in;
        border-top-left-radius: 30px;
        border-bottom-left-radius: 30px;
        border-top-right-radius: 30px;
        border-bottom-right-radius: 30px;
        height: 35px;
    }

        .viewpass:active {
            transform: scale(0.95);
        }

    .anchor a {
        position: relative;
        display: inline-block;
        margin: 15px 25px;
        outline: none;
        color: #fff;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 400;
        text-shadow: 0 0 1px rgba(255,255,255,0.6);
        font-size: 1.25em;
    }

        .anchor a:hover,
        .anchor a:focus {
            outline: none;
        }

    .cl-effect-4 a {
        padding: 0 0 10px;
    }

        .cl-effect-4 a::after {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            height: 1px;
            background: #fff;
            content: '';
            opacity: 0;
            -webkit-transition: height 0.3s, opacity 0.3s, -webkit-transform 0.3s;
            -moz-transition: height 0.3s, opacity 0.3s, -moz-transform 0.3s;
            transition: height 0.3s, opacity 0.3s, transform 0.3s;
            -webkit-transform: translateY(-10px);
            -moz-transform: translateY(-10px);
            transform: translateY(-10px);
        }

        .cl-effect-4 a:hover::after,
        .cl-effect-4 a:focus::after {
            height: 5px;
            opacity: 1;
            -webkit-transform: translateY(0px);
            -moz-transform: translateY(0px);
            transform: translateY(0px);
        }

    .color-7 {
        border-radius: 25px;
        background: #3fa46a;
    }
</style>
